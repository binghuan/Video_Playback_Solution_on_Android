<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.bh.com.videoplayer.MainActivity">

    <Button
        android:text="[A]. WebView Solution"
        android:layout_width="131dp"
        android:layout_height="94dp"
        android:id="@+id/button_webview"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <Button
        android:text="[B]. Native View Solution"
        android:layout_width="131dp"
        android:layout_height="94dp"
        android:id="@+id/button_natvieview"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/button_webview"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />

    <Button
        android:text="[C]. Web App Solution"
        android:layout_width="131dp"
        android:layout_height="94dp"
        android:id="@+id/button_webapp"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/button_natvieview"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />


    <Button
        android:text="[D]. Built-In Player Solution"
        android:layout_width="131dp"
        android:layout_height="94dp"
        android:id="@+id/button_default_player"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintTop_toBottomOf="@+id/button_webapp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main" />
</android.support.constraint.ConstraintLayout>
